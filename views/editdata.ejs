    <!DOCTYPE html>
    <html lang="en">
      <head>
        <meta charset="utf-8" />
        <meta
          name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <meta name="description" content="" />
        <meta name="author" content="Harsukh Makwana" />
        <title>Update Profile</title>
        <link
          rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        />
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
      </head>
      <body>
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <h1 class="mt-5 text-center">Update Contact Us</h1>
              <hr />
              <div class="col-lg-6 offset-3">
                <form
                  action="/api/contactus/update/<%= values._id %>"
                  method="post"
                >
                  <div class="form-group">
                    <label> Name</label>
                    <input
                      type="text"
                      class="form-control"
                      name="name"
                      placeholder="Enter Name"
                      value="<%= values.name %>"
                    />
                    <% if (typeof error1 !=='undefined' && error1.length> 0) {
                    %>
                    <div style="color: red"><%= error1 %></div>
                    <% } %>
                  </div>
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input
                      type="text"
                      class="form-control"
                      name="email"
                      placeholder="Enter Email"
                      value="<%= values.email %>"
                    />

                    <% if (typeof error3 !=='undefined' && error3.length> 0) {
                    %>
                    <div style="color: red"><%= error3 %></div>
                    <% } %>
                  </div>
                  <div class="form-group">
                    <label for="massage">Message</label>
                    <input
                      type="text"
                      class="form-control"
                      name="massage"
                      placeholder="Enter Message"
                      value="<%= values.massage %>"
                    />

                    <% if (typeof error3 !=='undefined' && error3.length> 0) {
                    %>
                    <div style="color: red"><%= error3 %></div>
                    <% } %>
                  </div>
                  <div class="form-group">
                    <label for="name"> Number</label>
                    <input
                      type="text"
                      class="form-control"
                      name="number"
                      placeholder="Enter Name"
                      value="<%= values.number %>"
                    />

                    <% if (typeof error2 !=='undefined' && error2.length> 0) {
                    %>
                    <div style="color: red"><%= error2 %></div>
                    <% } %>
                  </div>

                  <div class="form-group" ty>
                    <label for="message">Date</label>
                    <input
                      type="date"
                      name="date"
                      id="date"
                      placeholder=""
                      value="<%= values.date %>"
                    />
                    <% if (typeof error5 !=='undefined' && error5.length> 0) {
                    %>
                    <div style="color: red"><%= error5 %></div>
                    <% } %>
                  </div>

                  <br />
                  <button
                    type="submit"
                    class="btn btn-success"
                    style="margin-left: 45%"
                  >
                    Save Updates</button
                  ><br /><br /><br />
                </form>
              </div>
            </div>
          </div>
        </div>
      </body>
    </html>
